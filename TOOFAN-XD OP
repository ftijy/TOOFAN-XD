

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $TOOFAN_REPO == "TOOFANBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    elif [[ $TOOFAN_REPO == "TOOFANBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    elif [[ $TOOFAN_REPO =~ $regex ]]
    then
        if [[ $TOOFAN_REPO_BRANCH ]]
        then
            echo "${TOOFAN_REPO}/archive/${TOOFAND_REPO_BRANCH}.zip"
        else
            echo "${TOOFAN_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="TOOFANBot.zip"
    echo "  Installing TOOFAN-XD USERBOT Source Code..."âš¡
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data  TOOFAN-XD IS COMING..."
    TOOFAN PATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  TOOFAN-XD USERBOT V3.O Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $TOOFAN-XDPATH
    echo "    ðŸ˜ˆ TOOFAN-XD IS COMING.ðŸ˜ˆ"
    echo "
    ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

